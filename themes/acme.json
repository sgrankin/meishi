{
  "$schema": "vscode://schemas/color-theme",
  "name": "meishi (acme)",
  "type": "light",
  "colors": {
    "activityBar.background": "#000",
    "editor.background": "#fffeec",
    "editor.findMatchBackground": "#efeca7",
    "editor.findMatchBorder": "#009900",
    "editor.findMatchHighlightBackground": "#efeca7",
    "editor.findMatchHighlightBorder": "#009900",
    "editor.foreground": "#000",
    "editor.lineHighlightBackground": "#fff",
    "editor.selectionBackground": "#efeca7",
    "editor.selectionHighlightBackground": "#99ff99",
    "editor.selectionHighlightBorder": "#009900",
    "editor.wordHighlightBackground": "#efeca7",
    "editor.wordHighlightTextBorder": "#8888cc",
    "editorHoverWidget.background": "#fffeec",
    "editorInlayHint.foreground": "#000",
    "editorInlayHint.background": "#ececec",
    "editorBracketPairGuide.activeBackground1": "#888888",
    "editorBracketPairGuide.activeBackground2": "#888888",
    "editorBracketPairGuide.activeBackground3": "#888888",
    "editorBracketPairGuide.activeBackground4": "#888888",
    "editorBracketPairGuide.activeBackground5": "#888888",
    "editorBracketPairGuide.activeBackground6": "#888888",
    "sideBar.foreground": "#000",
    "terminal.ansiBlack": "#000",
    "terminal.ansiBrightBlack": "#000",
    "terminal.ansiBrightWhite": "#fff",
    "terminal.ansiWhite": "#e9ebeb",
    "terminal.foreground": "#000",
  },
  "tokenColors": [
    { "scope": [ "source" ], "settings": { "foreground": "#000", "fontStyle": "" } },
    { "scope": [ "comment", "punctuation.definition.comment" ], "settings": { "foreground": "#060", "fontStyle": "" } },
    { "scope": [ "entity.name.type.namespace", "support.package" ], "settings": { "foreground": "#000", "fontStyle": "" } },
    { "scope": [ "constant", "keyword", "storage.modifier", "storage.type.class", "storage.type.function", "storage.type.import", "storage.type.package", "storage.type.js", "storage.type.ts" ], "settings": { "foreground": "#03a", "fontStyle": "" } },
    // { "scope": [ "entity.name.type", "storage.type", "support.class" ], "settings": { "foreground": "#C000C0", "fontStyle": "" } },
    { "scope": [ "constant.numeric" ], "settings": { "foreground": "#000", "fontStyle": "" } },
    { "scope": [ "punctuation.definition.string", "string - source.json", "string.quoted.docstring" ], "settings": { "foreground": "#600", "fontStyle": "" } },
    { "scope": [ "support.function.builtin" ], "settings": { "foreground": "#03a", "fontStyle": "bold" } },
    { "scope": [ "meta.function.definition entity.name.function", "meta.method.definition entity.name.function" ], "settings": { "foreground": "#000", "fontStyle": "bold" } },
    { "scope": [ "variable" ], "settings": { "foreground": "#000", "fontStyle": "" } },
    { "scope": [ "constant.other.placeholder.go" ], "settings": { "foreground": "#000", "fontStyle": "" } },
    { "scope": [ "punctuation.definition.tag", "entity.name.tag" ], "settings": { "foreground": "#03a", "fontStyle": "bold" } },
    // { "scope": [ "entity.other.attribute-name" ], "settings": { "foreground": "#C000C0", "fontStyle": "" } },
    { "scope": "token.info-token", "settings": { "foreground": "#316BCD" } },
    { "scope": "token.warn-token", "settings": { "foreground": "#CD9731" } },
    { "scope": "token.error-token", "settings": { "foreground": "#CD3131" } },
    { "scope": "token.debug-token", "settings": { "foreground": "#800080" } },
    { "scope": [ "markup.heading", "punctuation.definition.list" ], "settings": { "fontStyle": "bold" } },
    { "scope": [ "markup.fenced_code.block", "markup.inline.raw.string" ], "settings": { "foreground": "#060" } },
    { "scope": [ "markup.bold", ], "settings": { "fontStyle": "bold" } },
    { "scope": [ "markup.italic", ], "settings": { "fontStyle": "italic" } },
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "*": { "foreground": "#000" },
    // Semantic token classification:
    // Modules
    // "namespace": { "foreground": "#003D67" },
    // Nominal Types
    // "type": { "foreground": "#C000C0" },
    // "class": { "foreground": "#C000C0" },
    // "enum": { "foreground": "#C000C0" },
    // "interface": { "foreground": "#C000C0" },
    // "struct": { "foreground": "#C000C0" },
    "typeParameter": { "foreground": "#003D67", "italic": true },
    // Variables
    "parameter": { },
    "variable": { },
    "property": { },
    "enumMember": { },
    "event": { },
    // Callables
    "function.declaration": { "bold": true },
    "method.declaration": { "bold": true },
    "macro.declaration": { "bold": true },
    // Labels
    "label": { },
    // Syntax
    "comment": { "foreground": "#060", "italic": false },
    "string": { "foreground": "#600", "italic": false },
    "keyword": { "foreground": "#03a" },
    "number": { "foreground": "#000" },
    "regexp": { "foreground": "#600" },
    "operator": { },
    // Semantic token modifiers:
    // Declaration
    "*.declaration": { },
    // Attributes
    "*.readonly": { },
    "*.static": { },
    "*.deprecated": { "underline": true },
    "*.abstract": { },
    // Usage?
    "*.async": { },
    "*.modification": { },
    "*.documentation": { },
    "*.defaultLibrary": { },
    // Rust specific:
    "*.attribute:rust": { },
    "attribute:rust": { },
    "boolean:rust": { }, // keyword
    "builtinType:rust": { }, // type
    "lifetime:rust": { /* "foreground": "#C000C0", */ "foreground": "#003D67", "italic": true },
    "selfKeyword:rust": { }, // keyword
    "typeAlias:rust": { }, // type
    "union:rust": { }, // type
    "formatSpecifier:rust": { "foreground": "#03a" },
    "enumMember.declaration:rust": { /* Enum members are constructors, so should look like callables. */ "bold": true },
    "unresolvedReference:rust": { "foreground": "#000" },
    // C++
    "*.global:cpp": { "underline": true }
  }
}
